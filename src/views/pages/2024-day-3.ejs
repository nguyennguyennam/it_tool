<div class="flex w-full max-w-4xl flex-col items-center justify-center gap-8">
  <div
    class="flex w-full flex-col items-start gap-2 border-b-2 border-zinc-700 py-4"
  >
    <h1
      class="from-cotton-candy to-cadillac bg-gradient-to-r bg-clip-text text-3xl font-bold text-transparent"
    >
      2024 Day 3: Mull It Over
    </h1>

    <p class="w-full">
      Solve the puzzle of the event Advent of Code year 2024, day 3. Both parts.
    </p>
  </div>

  <div class="flex w-full flex-col gap-8">
    <label class="flex w-full flex-col gap-4 font-semibold">
      <span class="min-w-fit">The puzzle input</span>
      <textarea
        id="input-puzzle"
        rows="5"
        class="focus:ring-cotton-candy font-space-mono hover:ring-cotton-candy/50 w-full cursor-not-allowed resize-none rounded-md bg-zinc-700 px-4 py-2 font-normal break-words ring-2 ring-transparent duration-200 outline-none placeholder:opacity-50"
        placeholder="Your puzzle input"
      ></textarea>
    </label>

    <button
      id="solve"
      class="border-cotton-candy bg-cotton-candy enabled:hover:text-cotton-candy disabled:border-cotton-candy/50 disabled:bg-cotton-candy/50 w-full cursor-pointer self-end rounded-md border-2 px-4 py-2 font-semibold text-black duration-200 enabled:hover:bg-transparent disabled:cursor-progress"
    >
      SOLVE
    </button>
  </div>

  <hr class="w-full rounded-2xl border-2 border-zinc-700" />

  <div class="flex w-full flex-col gap-8">
    <span class="font-semibold">The puzzle output</span>

    <div class="flex w-full flex-col gap-4">
      <div class="flex flex-col gap-2 lg:flex-row lg:items-center lg:gap-4">
        <span class="w-24">Part 1</span>
        <input
          type="text"
          id="output-part-1"
          readonly
          class="font-space-mono h-12 w-full cursor-not-allowed rounded-xl bg-zinc-700 px-4"
        />
      </div>
      <div class="flex flex-col gap-2 lg:flex-row lg:items-center lg:gap-4">
        <span class="w-24">Part 2</span>
        <input
          type="text"
          id="output-part-2"
          readonly
          class="font-space-mono h-12 w-full cursor-not-allowed rounded-xl bg-zinc-700 px-4"
        />
      </div>
    </div>
  </div>
</div>

<script defer>
  function solvePartOne(input) {
    const val = [...input.matchAll(/mul\((\d+),(\d+)\)/g)]
      .map((arr) => Number(arr[1]) * Number(arr[2]))
      .reduce((a, b) => a + b);

    $("#output-part-1").val(val);
  }

  function solvePartTwo(input) {
    const matches = [
      ...input.matchAll(/(mul\((\d+),(\d+)\)|do\(\)|don't\(\))/g),
    ];

    let enabled = true;
    let val = 0;

    for (const match of matches) {
      console.log(match);
      if (match[0] == "do()") {
        enabled = true;
      } else if (match[0] == "don't()") {
        enabled = false;
      } else if (enabled) {
        val += Number(match[2]) * Number(match[3]);
      }
    }

    $("#output-part-2").val(val);
  }

  $("#solve").click(() => {
    try {
      const input = $("#input-puzzle").val().trim();
      solvePartOne(input);
      solvePartTwo(input);
    } catch (e) {
      console.log(e);
      alert("Invalid input?");
    }
  });
</script>
