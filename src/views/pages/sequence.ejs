<div class="font-poppins flex w-180 flex-col items-center gap-6 p-3">
    <h1
      class="bg-gradient-to-r from-cadillac to-bashful bg-clip-text text-3xl font-bold text-transparent dark:from-cotton-candy dark:to-cadillac"
    >
      Sequence Tool
    </h1>
  
    <p class="text-center">
      Generate or calculate an arithmetic or a geometric sequence.
    </p>
  
    <div class="w-full">
      <div class="mb-4">
        <label for="typeSelect" class="block text-gray-700 dark:text-gray-300 font-bold mb-2"
          >Type:</label
        >
        <select
          id="typeSelect"
          class="w-full px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-bashful dark:focus:ring-cotton-candy dark:bg-zinc-700 bg-white dark:text-white dark:border-transparent"
        >
          <option value="arithmetic">Arithmetic</option>
          <option value="geometric">Geometric</option>
        </select>
      </div>
  
      <div class="mb-4">
        <label for="startInput" class="block font-semibold mb-2 text-gray-700 dark:text-gray-300"
          >Start:</label
        >
        <input
          type="text"
          id="startInput"
          value="1"
          class="h-12 w-full rounded-md bg-zinc-300 px-4 py-2 font-normal ring-2 ring-transparent duration-200 outline-none placeholder:opacity-50 focus:ring-bashful hover:ring-bashful/50 dark:bg-zinc-700 dark:text-white dark:focus:ring-cotton-candy dark:hover:ring-cotton-candy/50 dark:border-zinc-300"
        />
      </div>
  
      <div class="mb-4">
        <label for="stepInput" class="block text-gray-700 dark:text-gray-300 font-semibold mb-2"
          >Step / Ratio:</label
        >
        <input
          type="text"
          id="stepInput"
          value="2"
          class="h-12 w-full rounded-md bg-zinc-300 px-4 py-2 font-normal ring-2 ring-transparent duration-200 outline-none placeholder:opacity-50 focus:ring-bashful hover:ring-bashful/50 dark:bg-zinc-700 dark:text-white dark:focus:ring-cotton-candy dark:hover:ring-cotton-candy/50 dark:border-zinc-300"
        />
      </div>
  
      <div class="mb-4">
        <label for="lengthInput" class="block text-gray-700 dark:text-gray-300 font-semibold mb-2"
          >Length:</label
        >
        <input
          type="textr"
          id="lengthInput"
          value="5"
          class="h-12 w-full rounded-md bg-zinc-300 px-4 py-2 font-normal ring-2 ring-transparent duration-200 outline-none placeholder:opacity-50 focus:ring-bashful hover:ring-bashful/50 dark:bg-zinc-700 dark:text-white dark:focus:ring-cotton-candy dark:hover:ring-cotton-candy/50 dark:border-zinc-300"
        />
      </div>
  
      <div class="mt-6 text-center">
        <button
          id="generateSequenceBtn"
          class="bg-bashful hover:bg-transparent text-pearl border-2 border-bashful dark:bg-cotton-candy dark:hover:bg-transparent dark:text-black dark:border-cotton-candy flex w-full cursor-pointer items-center justify-center rounded-md px-4 py-2 font-semibold duration-200"
        >
          Generate Sequence
          <svg
            xmlns="https://www.svgrepo.com/svg/28675/right-arrow"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="ml-2 h-5 w-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"
            />
          </svg>
        </button>
      </div>
  
      <div id="sequenceResult" class="space-y-6 mt-8"></div>
    </div>
  </div>
  
  <script>
    $(document).ready(function () {
      $('#generateSequenceBtn').click(function () {
        const type = $('#typeSelect').val();
        const start = parseFloat($('#startInput').val().trim());
        const step = parseFloat($('#stepInput').val().trim());
        const length = parseInt($('#lengthInput').val().trim());
        let sequence = [];
  
        if (isNaN(start) || isNaN(step) || isNaN(length) || length <= 0) {
          $('#sequenceResult').html(
            `<p class="text-red-500 font-semibold dark:text-red-400">Please enter valid numbers.</p>`
          );
          return;
        }
  
        if (type === "arithmetic") {
          for (let i = 0; i < length; i++) {
            sequence.push(start + i * step);
          }
        } else if (type === "geometric") {
          for (let i = 0; i < length; i++) {
            sequence.push(start * Math.pow(step, i));
          }
        }
  
        const resultDiv = $('#sequenceResult');
        resultDiv.empty();
  
        const sequenceText = sequence.join(", ");
        const resultHTML = $(`
            <div class="rounded-md bg-zinc-300 px-4 py-2 dark:bg-zinc-700 flex items-center justify-between">
              <div class="w-full">
                <p class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Generated Sequence:</p>
                <pre class="whitespace-pre-wrap break-words text-lg font-mono text-gray-900 dark:text-white">${sequenceText}</pre>
              </div>
              <button
                id="copySequenceBtn"
                class="group relative shrink-0 cursor-pointer! fill-zinc-950 hover:fill-zinc-950/50 dark:fill-pearl dark:hover:fill-pearl/50 ml-4"
              >
                <span
                  class="absolute bottom-0 left-1/2 z-10 hidden -translate-x-1/2 -translate-y-full items-center justify-center rounded-md bg-zinc-500 px-4 py-2 font-semibold uppercase text-pearl group-hover:flex dark:bg-pearl dark:text-black"
                  >Copy</span
                >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 -960 960 960"
                  class="size-6"
                >
                  <path
                    d="M360-240q-33 0-56.5-23.5T280-320v-480q0-33 23.5-56.5T360-880h360q33 0 56.5 23.5T800-800v480q0 33-23.5 56.5T720-240H360Zm0-80h360v-480H360v480ZM200-80q-33 0-56.5-23.5T120-160v-560h80v560h440v80H200Zm160-240v-480 480Z"
                  />
                </svg>
              </button>
            </div>
          `);
  
        resultDiv.append(resultHTML);
  
        // Thêm chức năng copy cho nút mới
        $('#copySequenceBtn').click(() => {
          navigator.clipboard.writeText(sequenceText);
          $('#copySequenceBtn > span').text("Copied!");
          setTimeout(() => {
            $('#copySequenceBtn > span').text("Copy");
          }, 3000);
        });
      });
    });
  </script>