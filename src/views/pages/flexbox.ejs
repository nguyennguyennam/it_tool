<div class="flex w-full max-w-4xl flex-col items-center justify-center">
    <h1
        class="from-cadillac to-bashful dark:from-cotton-candy dark:to-cadillac">
        Sequence Tool
    </h1>

    <div class="w-full">
        <div class="mb-3">
            <label for="typeSelect" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Type:</label>
            <select id="typeSelect"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 bg-white dark:text-white dark:border-gray-700">
                <option value="arithmetic">Arithmetic</option>
                <option value="geometric">Geometric</option>
            </select>
        </div>

        <div class="mb-6">
            <label for="startInput" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Start:</label>
            <input type="number" id="startInput" value="1"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 bg-white placeholder-gray-700 dark:placeholder-white dark:border-gray-700">
        </div>

        <div class="mb-6">
            <label for="stepInput" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Step / Ratio:</label>
            <input type="number" id="stepInput" value="2"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 bg-white placeholder-gray-700 dark:placeholder-white dark:border-gray-700">
        </div>

        <div class="mb-6">
            <label for="lengthInput" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Length:</label>
            <input type="number" id="lengthInput" value="5"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 bg-white placeholder-gray-700 dark:placeholder-white dark:border-gray-700">
        </div>

        <div class="mt-8 text-center">
            <button id="generateSequenceBtn"
                class="px-8 py-3 text-lg text-white rounded-lg transition cursor-pointer bg-gradient-to-r from-cadillac to-bashful hover:opacity-90 dark:from-cotton-candy dark:to-cadillac focus:outline-none focus:ring-4 focus:ring-blue-500 dark:focus:ring-blue-800">
                Generate Sequence
            </button>
        </div>

        <div id="sequenceResult" class="space-y-4 mt-8"></div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#generateSequenceBtn').click(function () {
            const type = $('#typeSelect').val();
            const start = parseFloat($('#startInput').val().trim());
            const step = parseFloat($('#stepInput').val().trim());
            const length = parseInt($('#lengthInput').val().trim());
            let sequence = [];

            if (isNaN(start) || isNaN(step) || isNaN(length) || length <= 0) {
                $('#sequenceResult').html(`<p class="text-red-500 font-semibold">Please enter valid numbers.</p>`);
                return;
            }

            if (type === "arithmetic") {
                for (let i = 0; i < length; i++) {
                    sequence.push(start + i * step);
                }
            } else if (type === "geometric") {
                for (let i = 0; i < length; i++) {
                    sequence.push(start * Math.pow(step, i));
                }
            }

            $('#sequenceResult').html(`
                <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-inner">
                    <p class="font-semibold text-gray-700 dark:text-gray-300 mb-2">Generated Sequence:</p>
                    <pre class="text-lg font-mono text-gray-900 dark:text-white">${sequence.join(", ")}</pre>
                </div>
            `);
        });
    });
</script>