<div class="flex w-full max-w-4xl flex-col items-center justify-center gap-8">
  <h2 class="text-xl font-bold">Create New Tool</h2>

  <form
    method="post"
    enctype="application/x-www-form-urlencoded"
    class="flex w-full flex-col gap-4"
  >
    <label for="name" class="flex w-full flex-col gap-2">
      <span class="font-semibold">Tool Name</span>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Phuc An Puncher"
        class="dark:border-pearl min-h-12 rounded-lg border border-zinc-700 px-4 py-2 placeholder:opacity-50"
      />
    </label>

    <label for="description" class="flex w-full flex-col gap-2">
      <span class="font-semibold">Description</span>
      <textarea
        name="description"
        id="description"
        rows="3"
        placeholder="For punching Phuc An in the face because he does gym and it kinda hurts to punch with your hands."
        class="dark:border-pearl min-h-12 rounded-lg border border-zinc-700 px-4 py-2 placeholder:opacity-50"
      ></textarea>
    </label>

    <label for="path" class="flex w-full flex-col gap-2">
      <span class="font-semibold">Path</span>
      <input
        type="text"
        name="path"
        id="path"
        placeholder="phuc-an"
        class="dark:border-pearl min-h-12 rounded-lg border border-zinc-700 px-4 py-2 placeholder:opacity-50"
      />
    </label>

    <div class="my-2 grid w-full grid-cols-2">
      <label
        for="premium"
        class="flex w-full flex-row items-center justify-start gap-2"
      >
        <span class="font-semibold">Premium</span>
        <input
          type="checkbox"
          name="premium"
          id="premium"
          class="checked:bg-bashful checked:dark:bg-cadillac after:bg-pearl relative h-7 w-12 appearance-none rounded-full bg-zinc-400 p-1 duration-200 after:absolute after:top-1 after:left-1 after:size-5 after:rounded-full after:content-[''] checked:after:left-6 dark:bg-zinc-600"
        />
      </label>

      <label
        for="enabled"
        class="flex w-full flex-row items-center justify-start gap-2"
      >
        <span class="font-semibold">Enabled</span>
        <input
          type="checkbox"
          name="enabled"
          id="enabled"
          checked
          class="checked:bg-bashful checked:dark:bg-cadillac after:bg-pearl relative h-7 w-12 appearance-none rounded-full bg-zinc-400 p-1 duration-200 after:absolute after:top-1 after:left-1 after:size-5 after:rounded-full after:content-[''] checked:after:left-6 dark:bg-zinc-600"
        />
      </label>
    </div>

    <label for="section" class="flex w-full flex-col items-start gap-2">
      <span class="font-semibold">Section</span>
      <select
        name="section"
        id="section"
        class="dark:border-pearl min-h-12 w-full appearance-none rounded-lg border border-zinc-700 px-4 py-2 placeholder:opacity-50"
      >
        <option value="0" disabled selected>Pick a section</option>
        <% content.tools.forEach(section => { %>
        <option value="<%= section.id %>"><%= section.name %></option>
        <% }) %>
      </select>
    </label>

    <% if (content.errorMessage) { %>
    <p class="w-full text-left text-rose-500 dark:text-rose-300">
      <%= content.errorMessage %>
    </p>
    <% } %>

    <button
      type="submit"
      class="border-bashful bg-bashful hover:text-bashful dark:border-cotton-candy dark:bg-cotton-candy dark:hover:text-cotton-candy text-pearl cursor-pointer self-end rounded-md border-2 px-4 py-2 font-semibold duration-200 hover:bg-transparent dark:text-black"
    >
      Submit
    </button>
  </form>
</div>
