<!-- The navigation bar should be on the left, and collapsible. -->
<aside
  id="navigation-bar"
  class="absolute inset-0 z-50 flex flex-col items-center gap-8 bg-zinc-900 px-6 py-16 transition-transform duration-200 lg:w-64 lg:translate-x-0 lg:shadow-lg"
>
  <button
    id="navigation-bar-close"
    class="absolute top-6 right-6 cursor-pointer duration-200 hover:rotate-90 lg:hidden"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 -960 960 960"
      class="fill-pearl size-6"
    >
      <path
        d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"
      />
    </svg>
  </button>

  <h1
    class="bg-gradient-to-r from-violet-300 to-fuchsia-400 bg-clip-text text-3xl font-bold text-transparent"
  >
    IT Tools
  </h1>
</aside>

<!-- The button to reopen the navigation bar. -->
<button
  id="navigation-bar-open"
  class="border-pearl absolute top-6 left-6 hidden size-8 items-center justify-center rounded-full border-2 p-2 duration-500 hover:rotate-180 lg:top-12 lg:left-12 lg:hidden lg:size-8"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 -960 960 960"
    class="fill-pearl size-full"
  >
    <path
      d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"
    />
  </svg>
</button>

<script defer>
  // This applies a click event on the close button that closes the navigation bar, and enables
  // the "Open navigation bar" button.
  $("#navigation-bar-close").on("click", () => {
    $("#navigation-bar").addClass("-translate-x-full");
    $("#navigation-bar-open").removeClass("hidden").addClass("flex");
  });

  // This applies a click even on the open button that opens the navigation bar back.
  $("#navigation-bar-open").on("click", () => {
    $("#navigation-bar-open").addClass("hidden").removeClass("flex");
    $("#navigation-bar").removeClass("-translate-x-full");
  });

  // Applies the navigation bar out, if we're on a larger screen when we navigate, otherwise keep it
  // closed.
  $(document).ready(() => {
    if (visualViewport.width < 1024) {
      $("#navigation-bar-close").click();
    }
  });
</script>
